<div class="chat-side-bar">
  <div class="chat-side-ber-toptitle">
    <p class="chat-side-ber-toptitle-text">チャットルーム</p>
  </div>

  <%#-----------------  left-block   --------------------%>

  <% @learns.each do |learn| %>
    <div class="learn-list">
    <% if learn.id == @learn.id %><%#-----------------  test   --------------------%>
      <%= link_to learn_path(learn.id, learn_id: params[:learn_id]) do %>    <%# 詳細ページへリンク %>
        <div class="top-page-content1-1" >       <%# 一つの投稿の外枠 %>
          <p class="top-page-content1-studytitle"><%= learn.studytitle.truncate(12) %></p>
          <span class="top-page-content1-job2">投稿者：
            <span class="top-page-content1-job1"><%= learn.user.nickname %></span><br>
          </span>
          <span class="top-page-content1-job2">職　業：
            <span class="top-page-content1-job1"><%= learn.job.name %></span>
          </span>
          <p class="top-page-content1-study"><%= learn.study.truncate(80) %></p>
          <% if learn.thankyou_money != 0 && learn.thankyou_money != nil %>
            <div class="top-page-content1-money-form">
              <p class="top-page-content1-money">お礼金 <%= learn.thankyou_money.truncate(7) %>円</p>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %><%#-----------------  test   --------------------%>
    </div>
  <% end %>
<%#-----------------  --------------------%>
  <%= link_to(new_learn_relearn_room_path(learn_id: params[:learn_id], relearn_id: params[:relearn_id])) do %>
  <div class="chat-side-ber-toptitle1">
      <p class="chat-side-ber-toptitle-text1">新規チャットルームを作成</p>
  </div>
  <% end %>
  <%#----------------- ルーム名を表示 --------------------%>
  <div class="rooms">

  <% rooms = Room.all %>
  <% current_user.rooms.each do |room| %>
  <%= link_to(learn_relearn_room_messages_path(room_id: room.id)) do %>

    <% if room.id.to_i != params[:room_id].to_i %>
    <div class="room">
      <div class="room-name">
         <%= room.name %>
      </div>
    </div>
    <% end %>


  <% end %>
  <% end %>
  </div>
<%#-----------------   --------------------%>

</div>