<header class='top-page-header'>
  <div>
    <%= link_to root_path do %> 
      <p class='top-page-header-title'>Izumi Industory</p>
      <p class='top-page-header-title-med'>メディシェア</p>
    <% end %>
  </div>
  <div>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>

    <div class='top-page-header-div1'>
    <% if user_signed_in? %>
      <%= link_to current_user.nickname+" さん", "#", class: "user-nickname" %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
    <% else %>
      <%= link_to 'ログイン', new_user_session_path, class: "login" %>
      <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
    <% end %>
    </div>
  </div>
</header>